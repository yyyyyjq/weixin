.topics{
  height: 100%;
  overflow:hidden;
}
.top-bar{
  height: 72rpx;
  line-height: 72rpx;
  background:#444;
  width:100%;
  position: fixed;
  top:0;
  z-index: 1;
}
.top-bar-item {
  color:#80bd01;
  text-align: center;
  font-size: 28 rpx;
  display: inline-block;
  width: 150rpx;
}
.top-bar-active{
  color:#fff;
  font-size: 32 rpx;
}
